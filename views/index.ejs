<% include _header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Home</h1>
            <br>
            <% if( token == '' ) { %>
                <p>Ingresa tu password para generar el API token</p>
                <form class="form-inline" method="post" action="/api/authenticate">
                    <div class="form-group">
                        <input type="hidden" name="email" value="<%= email %>">
                        <input type="password" class="form-control" name="password" id="password" required>
                    </div>
                    <button type="submit" class="btn btn-default">Generar</button>
                </form>
            <% } else { %>
                <div class="token"><p>Tu token es</p> <pre><%= token %></pre></div>
                <form class="form-inline" method="get" action="/api/anuncios/">
                    <input type="hidden" name="token" value="<%= token %>">
                    <button type="submit" class="btn btn-link">Ver API con token</button>
                </form>
            <% } %>

        </div>
    </div>
</div>

<% include _footer %>